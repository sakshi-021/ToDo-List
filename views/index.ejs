
<%-include("header") -%>   

    <div id="heading">
        <h1>To-Do List</h1>
    </div>
    <div class="container">
       
    <div class="box">
        <h1><%=listTitle %></h1>
            <form action="/delete" method="POST">
            <% newItem.forEach(function(item){%>
                <div class="item">
                    <input type="checkbox"name="checkbox" value="<%= item._id%>" onchange="this.form.submit()">
                    <p><%= item.name%></p>
                </div>
                <input type="hidden" name="listName" value="<%=listTitle%>"/>
            <%})%>
        </form>
            <form class="item" action="/" method="POST">
                <input type="text" name="newItem" placeholder="Enter new list" autocomplete="off">
                <button type="submit" name="list" value="<%= listTitle%>">+</button>
                </form>
            
    </div>
    <div class="list">
        <h1>List</h1>
        <% listItems.forEach(function(item){%>
            <ul class="listItem">
                <li> <input type="text" name="listName" value="<%=item.name%>"/></li>
                
            </ul>
            <%})%>
    </div>
</div>
    
    <%-include("footer") -%>